{
    "name": "ghost-advisory-theme",
    "description": "Custom-built Ghost theme for Advisory SG",
    "demo": "https://advisory.sg",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Advisory SG",
        "email": "contact@advisory.sg",
        "url": "https://advisory.sg"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/AdvisorySG/ghost-advisory-theme.git"
    },
    "bugs": "https://github.com/AdvisorySG/ghost-advisory-theme/issues",
    "contributors": "https://github.com/AdvisorySG/ghost-advisory-theme/graphs/contributors",
    "dependencies": {
        "@tryghost/admin-api": "^1.2.0",
        "autoprefixer": "9.8.4",
        "beeper": "2.0.0",
        "cssnano": "4.1.10",
        "gscan": "3.5.4",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "8.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.0.2",
        "postcss-color-mod-function": "3.0.3",
        "postcss-custom-properties": "9.1.1",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "devDependencies": {
        "danger": "^10.2.1",
        "husky": "^4.2.5",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
