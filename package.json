{
    "name": "ghost-advisory-theme",
    "description": "Custom-built Ghost theme for Advisory SG",
    "demo": "https://advisory.sg",
    "version": "1.0.0-beta",
    "engines": {
        "ghost-api": "v4"
    },
    "license": "MIT",
    "scripts": {
        "dev": "gulp",
        "zip": "NODE_ENV=production gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "prepare": "husky install"
    },
    "author": {
        "name": "Advisory SG",
        "email": "contact@advisory.sg",
        "url": "https://advisory.sg"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/AdvisorySG/ghost-advisory-theme.git"
    },
    "bugs": "https://github.com/AdvisorySG/ghost-advisory-theme/issues",
    "contributors": [
        {
            "name": "Advisory Singapore",
            "email": "technology@advisory.sg",
            "url": "https://github.com/AdvisorySG/ghost-advisory-theme/graphs/contributors"
        }
    ],
    "dependencies": {
        "@tailwindcss/line-clamp": "^0.2.1",
        "@tailwindcss/typography": "^0.4.1",
        "@tryghost/admin-api": "^1.4.2",
        "autoprefixer": "^10.2.6",
        "gscan": "4.3.1",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-terser-js": "^5.2.2",
        "gulp-zip": "5.1.0",
        "postcss": "^8.3.5",
        "postcss-import": "^14.0.2",
        "pump": "3.0.0",
        "tailwindcss": "^2.2.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 2,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "devDependencies": {
        "husky": "^7.0.1",
        "prettier": "^2.3.1",
        "pretty-quick": "^3.1.1"
    }
}
